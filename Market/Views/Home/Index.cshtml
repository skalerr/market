<div>
  @Html.ActionLink("Создать заказ", "CreateOrder", "Home", null, new { @class = "btn btn-warning" })
</div>
<div>
  @Html.ActionLink("providers", "Providers", "Home", null, new { @class = "btn btn-warning" })
</div>

@{
  @if (true)
  {
    <table class="table">
    <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Number</th>
      <th scope="col">Date</th>
      <th scope="col">Provider</th>
    </tr>
    </thead>
    <tbody>
    @if (orders != null)
    {
      foreach (var order in orders)
      {
        <tr>
          <th scope="row">@order.Id</th>
          <td>@Html.ActionLink(order.Number.ToString(), "OrderInfo", "Home", new { id = order.Id }, null)</td>
          <td>@order.Date</td>
          <td>@order.ProviderId</td>
          
        </tr>
      }
    }
    
    </tbody>
    </table>
  }
}

