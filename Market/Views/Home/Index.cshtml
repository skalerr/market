@{
  @if (orders?.Count > 1)
  {
    <table class="table">
    <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Number</th>
      <th scope="col">Date</th>
      <th scope="col">Provider</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in orders)
    {
      <tr>
        <th scope="row">@order.Id</th>
        <td>@order.Number</td>
        <td>@order.Date</td>
        <td>@order.Provider</td>
      </tr>
    }
    </tbody>
    </table>
  }
}

<div>
    <p><input type="submit" value="Отправить" /></p>
</div>