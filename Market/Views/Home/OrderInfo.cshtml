        <div class="row">
          <div class="col-md-7 selectize-style-only">
            @Html.TextBoxFor(model => model.Number, new { @class = "form-control", autocomplete = "off" })
          </div>
          <div class="col-md-5">
            @Html.ValidationMessageFor(model => model.Number, null, new { @class = "error-message" })
          </div>
        </div>
      </div>
