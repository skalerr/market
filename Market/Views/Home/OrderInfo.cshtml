@model Order

@{
    ViewData["Title"] = "Home Page";
    var order = ViewBag.Order as Order;
}

<form>
  <fieldset disabled>
    <legend>Disabled fieldset example</legend>
    <div class="form-group">
      @Html.LabelFor(model => model.Id, new { @class = "control-label col-md-3" })
      <div class="col-md-9">
        <div class="row">
          <div class="col-md-7 selectize-style-only">
            @Html.TextBoxFor(model => model.Id, new { @class = "form-control", autocomplete = "off" })
          </div>
          <div class="col-md-5">
            @Html.ValidationMessageFor(model => model.Id, null, new { @class = "error-message" })
          </div>
        </div>
      </div>
    </div>
    
    <div class="form-group">
      @Html.LabelFor(model => model.Number, new { @class = "control-label col-md-3" })
