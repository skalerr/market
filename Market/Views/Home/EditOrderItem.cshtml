@model Market.Domain.ViewModels.OrderItem.OrderItemViewModel

@{
}

<div class="col">
    @using (Html.BeginForm("EditOrderItem", "Home", FormMethod.Post,new {@class = "form-horizontal", role = "form"}))
    {
      <legend>Создать предмет заказа</legend>
        <div class="form-group">
          @Html.LabelFor(model => model.Name, new {@class = "control-label col-md-3"})
          <div class="col-md-9">
            <div class="row">
              <div class="col-md-7 selectize-style-only">
                @Html.TextBoxFor(model => model.Name, new {@class = "form-control", autocomplete = "off"})
              </div>
              <div class="col-md-5">
                @Html.ValidationMessageFor(model => model.Name, null, new {@class = "error-message"})
              </div>
            </div>
          </div>
        </div>

        <div class="form-group">
          @Html.LabelFor(model => model.Quantity, new {@class = "control-label col-md-3"})
          <div class="col-md-9">
            <div class="row">
              <div class="col-md-7 selectize-style-only">
                @Html.TextBoxFor(model => model.Quantity, new {@class = "form-control", autocomplete = "off"})
              </div>
              <div class="col-md-5">
                @Html.ValidationMessageFor(model => model.Quantity, null, new {@class = "error-message"})
              </div>
            </div>
          </div>
        </div>

        <div class="form-group">
        @Html.LabelFor(model => model.Unit, new {@class = "control-label col-md-3"})
        <div class="col-md-9">
          <div class="row">
            <div class="col-md-7 selectize-style-only">
              @Html.TextBoxFor(model => model.Unit, new {@class = "form-control", autocomplete = "off"})
            </div>
            <div class="col-md-5">
              @Html.ValidationMessageFor(model => model.Unit, null, new {@class = "error-message"})
            </div>
          </div>
        </div>
      </div>
      <button type="submit" class="my-5 btn btn-success">Отправить</button>
    }
</div>